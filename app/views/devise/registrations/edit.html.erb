<div class="mx-auto w-1/3 h-screen overflow-visible">

  <div class="font-bold title justify-between text-2xl my-8">Edit Profile</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field mt-8">
      <%= f.label :img, 'Avatar'%><br/>
      <%= f.file_field(:img, {:class => "w-full block text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none"})%>
    </div>

    <div class="field mt-8">
      <%= f.label :name, 'Username' %><br/>
      <%= f.text_field(:name, {autofocus: true, :class => "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"}) %>
    </div>

    <div class="field mt-8">
      <%= f.label :realname, 'Name'%><br/>
      <%= f.text_field(:realname, {autofocus: true, autocomplete: "name", :class => "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"}) %>
    </div>

    <div class="field mt-8">
      <%= f.label :description, 'Description'%><br/>
      <%= f.text_field(:description, {autofocus: true, :class => "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"}) %>
    </div>

    <div class="field mt-8">
      <%= f.label :email, {:class => "mt-8"}  %><br/>
      <%= f.email_field(:email, {autofocus: true, autocomplete: "email", :class => "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 "}) %>
    </div>

    <div class="field mt-8">
      <%= f.label :closed %><br/>
      <%= f.check_box(:closed, {:class => "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"}) %>
    </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt-8">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mt-8">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
  </div>

  <div class="field mt-8">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "my-8 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg sm:w-auto px-5 py-2.5 text-center" %>
  </div>
<% end %>


	<div class="flex flex-col p-8 bg-white shadow-md hover:shodow-lg rounded-2xl">
		<div class="flex items-center justify-between">
			<div class="flex items-center">
				<svg xmlns="http://www.w3.org/2000/svg"
					class="w-16 h-16 rounded-2xl p-3 border border-blue-100 text-blue-400 bg-blue-50" fill="none"
					viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
						d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
				</svg>
				<div class="flex flex-col ml-3">
					<div class="font-medium leading-none">Unhappy?<br/>Delete Your Acccount ?</div>
					<p class="text-sm text-gray-600 leading-none mt-1">By deleting your account you will lose your all data</p>
				</div>
			</div>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "flex-no-shrink bg-red-500 px-5 ml-4 py-2 text-sm hover:bg-red-700 font-medium tracking-wider text-white rounded-full" %>
		</div>
	</div>

<div class="mt-8 mb-16">
  <%= link_to "Back", :back, class: "px-5 py-2.5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg sm:w-auto text-center" %>
</div>
