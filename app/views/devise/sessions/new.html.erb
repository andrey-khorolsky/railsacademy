<div class="mx-auto w-1/3 h-screen overflow-visible">

  <div class="font-bold title justify-between text-2xl my-8">Log in</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-8">
      <%= f.label :email %><br />
      <%= f.email_field :email, {:class => "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"} %>
    </div>

    <div class="field mt-8">
      <%= f.label :password %><br />
      <%= f.password_field :password, {autocomplete: "current-password", :class => "w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"} %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-8">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", {:class => "my-8 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg sm:w-auto px-5 py-2.5 text-center"} %>
    </div>
  <% end %>


  <%= render "devise/shared/links" %>
</div>
