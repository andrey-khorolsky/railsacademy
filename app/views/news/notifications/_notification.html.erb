<div class="flex justify-between py-6 px-4 bg-slate-200 rounded-lg">
    <div class="flex items-center space-x-4">

        <div class="flex items-center w-20 min-w-min max-w-full">
        <!--post's and user's img-->
            <%if notice.posts_id?%>
                <!--post's img-->
                <a href="/post/<%=notice.posts_id%>">
                    <img src=<%= Post.find(notice.posts_id).img %> class="h-14 w-14" alt="">
                </a>

                <!--user's img-->
                <a href="/user/<%=notice.users_id%>">
                    <img src=<%= User.getImg notice.users_id%> class="rounded-full bg-white h-8 w-8 max-w-min mt-8 -ml-4" alt="">
                </a>
                
        <!--only user's img-->
            <%else%>
                <a href="/user/<%=notice.users_id%>">
                    <img src=<%= User.getImg notice.users_id%> class="rounded-full bg-white h-14 w-14" alt="">
                </a>
            <%end%>
        </div>

        <!--notice's text-->
        <div class="flex flex-col space-y-1">
            <a class="font-bold" href="/user/<%= notice.users_id%>"><%= User.find(notice.users_id).name %></a>
            
            <%= render partial: "news/notifications/"+notice.notice_type.typename, locals: {notice: notice} %>
            
        </div>
    </div>

    <!--time-->
    <div class="flex-none px-4 py-2 text-stone-600 text-xs md:text-sm">
        <%= notice.get_time %>
    </div>
</div>
