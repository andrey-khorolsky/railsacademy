

<div class="mx-auto w-1/3 h-screen overflow-visible h-full mt-8">
    <div class="mx-auto max-w-lg first w-full mb-12">
        <div class="suggestion-users">
            <div class="title flex w-full justify-between text-2xl">
                <div class="left">
                    <h1 class="font-bold"><%= @title %></h1>
                </div>
            </div>

            <div class="mt-4 relative mx-auto text-gray-600">
                <form>
                    <input class="border-2 border-gray-300 bg-white h-10 px-5 pr-16 rounded-lg text-sm focus:outline-none w-full"
                    type="search" name="search" placeholder="Search">
                    <button type="submit" class="absolute right-0 top-0 mt-3 mr-4">
                    <svg class="text-gray-600 h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve"
                        width="512px" height="512px">
                        <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
                    </svg>
                    </button>
                </form>
            </div>

            <%@user.each do |usr|%>

                <div class="users-wrapper mt-8 flex w-full justify-between items-center">
                    <div class="user-item flex flex-row pl-2">
                        <div class="user-img h-10 w-10 border rounded-full overflow-hidden mr-4">
                            <img alt="realdonaldtrump's profile picture" class="" src=<%=User.getImg usr.id%>>
                        </div>
                        <div class="user-name flex flex-col ">
                            <a href="/user/<%=usr.id%>" class="text-xl font-semibold"><%=usr.name%></a>
                            <span class="text-lg -mt-1 text-gray-700"><%=usr.realname%></span>
                        </div>
                    </div>

                    <%if (usr.id != current_user.id)%>
                        <%if Follower.areUserFollowTo current_user.id, usr.id%>
                            <a href='/user/<%=usr.id%>/unfollow' class="follow text-blue-600 text-xl font-semibold">Unfollow</a>
                        <%else%>
                            <a href='/user/<%=usr.id%>/follow' class="follow text-blue-600 text-xl font-semibold">Follow</a>
                        <%end%>
                    <%end%>
                </div>

            <%end%>

        </div>
    </div>
</div>

<%if @user.count > 12%>
    <%= render "post/scrolltop" %>
<%end%>
