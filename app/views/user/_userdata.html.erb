
<div class="bg-gray-100 h-auto px-48">
    <div class="flex md:flex-row-reverse flex-wrap">
        <div class="w-full md:w-3/4 p-4 text-center">

            <!--users data-->
            <div class="text-left pl-4 pt-3">
                <span class="text-lg font-bold text-gray-700 mr-2"><%=@user.name%></span>
                <span class="text-sm text-gray-700 mr-2"><%=@user.email%></span>
                
                <!--follow-->
                <%if (@user.id != current_user.id)%>
                    <%if @follower%>
                        <a href='/user/<%=@user.id%>/unfollow' class="bg-transparent hover:bg-blue-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-600 hover:border-transparent rounded">Unfollow</a>
                    <%else%>
                        <a href='/user/<%=@user.id%>/follow' class="bg-transparent hover:bg-blue-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-600 hover:border-transparent rounded">Follow</a>
                    <%end%>
                <%end%>
            </div>

            <!--metrics-->
            <div class="text-left pl-4 pt-3">
                <span class="text-base font-semibold text-gray-700 mr-2">
                    <b><%=@metrics[0]%></b> posts
                </span>
                <span class="text-base font-semibold text-gray-700 mr-2">
                    <b><%=@metrics[1]%></b> followers
                </span>
                <span class="text-base font-semibold text-gray-700">
                    <b><%=@metrics[2]%></b> following
                </span>
            </div>

            <!--new post-->
            <%if @user.id == current_user.id%>
                <div class="text-left pl-4 pt-3">
                    <a href='/post/new' class="bg-transparent hover:bg-blue-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-600 hover:border-transparent rounded">new post</a>
                </div>
            <%end%>
        </div>
    </div>
</div>